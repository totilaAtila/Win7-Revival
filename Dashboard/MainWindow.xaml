<Window
    x:Class="CrystalFrame.Dashboard.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CrystalFrame.Dashboard"
    Title="CrystalFrame Settings"
    Width="500"
    Height="600">

    <Grid Padding="20" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="CrystalFrame" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Core Engine Section -->
        <Border Grid.Row="1"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8"
                Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status indicator dot -->
                <Ellipse Grid.Column="0"
                         x:Name="CoreStatusDot"
                         Width="12" Height="12"
                         VerticalAlignment="Center"/>

                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="Core Engine"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                    <TextBlock x:Name="CoreStatusDetail"
                               FontSize="12"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>

                <ToggleSwitch Grid.Column="3"
                              x:Name="CoreRunningToggle"
                              OnContent="ON"
                              OffContent="OFF"
                              Toggled="CoreRunning_Toggled"/>
            </Grid>
        </Border>

        <!-- Taskbar Section -->
        <StackPanel Grid.Row="3" Spacing="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Taskbar Overlay" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <ToggleSwitch Grid.Column="1"
                              x:Name="TaskbarEnabledToggle"
                              OnContent="Enabled"
                              OffContent="Disabled"
                              Toggled="TaskbarEnabled_Toggled"/>
            </Grid>

            <TextBlock x:Name="TaskbarStatusText"
                       FontSize="12"
                       Margin="0,0,0,5"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Opacity:" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>

                <Slider Grid.Column="1"
                        x:Name="TaskbarOpacitySlider"
                        Minimum="0"
                        Maximum="100"
                        StepFrequency="1"
                        ValueChanged="TaskbarOpacity_ValueChanged"
                        IsEnabled="{x:Bind TaskbarEnabledToggle.IsOn, Mode=OneWay}"/>

                <TextBlock Grid.Column="2"
                           x:Name="TaskbarOpacityValue"
                           Width="40"
                           TextAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
            </Grid>
        </StackPanel>

        <!-- Start Menu Section -->
        <StackPanel Grid.Row="5" Spacing="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Start Menu Overlay" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <ToggleSwitch Grid.Column="1"
                              x:Name="StartEnabledToggle"
                              OnContent="Enabled"
                              OffContent="Disabled"
                              Toggled="StartEnabled_Toggled"/>
            </Grid>

            <TextBlock x:Name="StartStatusText"
                       FontSize="12"
                       Margin="0,0,0,5"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Opacity:" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>

                <Slider Grid.Column="1"
                        x:Name="StartOpacitySlider"
                        Minimum="0"
                        Maximum="100"
                        StepFrequency="1"
                        ValueChanged="StartOpacity_ValueChanged"
                        IsEnabled="{x:Bind StartEnabledToggle.IsOn, Mode=OneWay}"/>

                <TextBlock Grid.Column="2"
                           x:Name="StartOpacityValue"
                           Width="40"
                           TextAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
            </Grid>
        </StackPanel>

        <!-- Status Footer -->
        <StackPanel Grid.Row="8" Spacing="5">
            <Border BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="0,10,0,0">
                <TextBlock x:Name="ConnectionStatusText"
                           FontSize="12"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>
